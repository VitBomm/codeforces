    #include<iostream>
    #include<string>
    using namespace std;
        int main()
        {
            int n;
            cin>>n;
            string a[10000];
            for(int i=0;i<n;i++)
            {
                cin>>a[i];
                if(a[i].size()>10)
                {
                    cout<<a[i][0]<<a[i].size()-2<<a[i][a[i].size()-1];
                    cout<<endl;
                }
                else
                {
                    cout<<a[i];
                    cout<<endl;
                }
            }
            return 0;
        }
